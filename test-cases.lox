
 fun makeCounter() {
  var i = 0;
  fun count() {
    i = i + 1;
    print(i);
  }

  i = 90; // shall update i value inside count()
  fun closure_update() {
    i = i + 900;
  }
  closure_update();
  return count;
}

var counter = makeCounter();
counter(); // expect "991".
counter(); // expect "992".